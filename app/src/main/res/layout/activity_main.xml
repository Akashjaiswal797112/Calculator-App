<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button0"
        android:layout_width="169dp"
        android:layout_height="80dp"
        android:text="0"
        android:textSize="34sp"
        app:backgroundTint="#505050"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonPoint"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:text="+"
        android:textSize="34sp"
        app:backgroundTint="#FF9500"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonEqual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/buttonSub" />

    <Button
        android:id="@+id/buttonPoint"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:text="."
        android:textSize="34sp"
        app:backgroundTint="#505050"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonEqual"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <Button
        android:id="@+id/button9"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:text="9"
        android:textSize="34sp"
        app:backgroundTint="#505050"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toStartOf="@+id/buttonMultiply"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/buttonBracket" />

    <Button
        android:id="@+id/button6"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:text="6"
        android:textSize="34sp"
        app:backgroundTint="#505050"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toStartOf="@+id/buttonSub"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/buttonBracket"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:text="( )"
        android:textColor="#1C1C1C"
        android:textSize="32sp"
        app:backgroundTint="#D4D4D2"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintEnd_toStartOf="@+id/buttonDivide"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonTop2"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <Button
        android:id="@+id/button3"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:text="3"
        android:textSize="34sp"
        app:backgroundTint="#505050"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPoint"
        app:layout_constraintEnd_toStartOf="@+id/buttonAdd"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/buttonSub"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:text="−"
        android:textSize="34sp"
        app:backgroundTint="#FF9500"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/buttonMultiply" />

    <Button
        android:id="@+id/button2"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:text="2"
        android:textSize="34sp"
        app:backgroundTint="#505050"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/button0"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button7"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:text="7"
        android:textSize="34sp"
        app:backgroundTint="#505050"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toStartOf="@+id/button8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAC" />

    <Button
        android:id="@+id/button4"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:text="4"
        android:textSize="34sp"
        app:backgroundTint="#505050"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button5"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:text="5"
        android:textSize="34sp"
        app:backgroundTint="#505050"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:text="×"
        android:textSize="34sp"
        app:backgroundTint="#FF9500"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/buttonDivide" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:text="÷"
        android:textSize="34sp"
        app:backgroundTint="#FF9500"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonMultiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonBracket"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <Button
        android:id="@+id/button8"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:text="8"
        android:textSize="34sp"
        app:backgroundTint="#505050"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toStartOf="@+id/button9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/buttonTop2" />

    <Button
        android:id="@+id/buttonAC"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:soundEffectsEnabled="false"
        android:text="AC"
        android:textColor="#1C1C1C"
        android:textSize="24sp"
        app:backgroundTint="#D4D4D2"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintEnd_toStartOf="@+id/buttonTop2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <Button
        android:id="@+id/buttonTop2"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:text="^"
        android:textColor="#1C1C1C"
        android:textSize="40sp"
        app:backgroundTint="#D4D4D2"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintEnd_toStartOf="@+id/buttonBracket"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonAC"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <Button
        android:id="@+id/button1"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:text="1"
        android:textSize="34sp"
        app:backgroundTint="#505050"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/button0"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:text="="
        android:textSize="34sp"
        app:backgroundTint="#FF9500"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonPoint"
        app:layout_constraintTop_toBottomOf="@+id/buttonAdd" />

    <EditText
        android:id="@+id/display"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginTop="162dp"
        android:layout_marginBottom="395dp"
        android:background="@null"
        android:cursorVisible="false"
        android:ems="10"
        android:fadeScrollbars="false"
        android:gravity="right"
        android:inputType="none"
        android:maxLines="1"
        android:paddingLeft="21sp"
        android:paddingRight="21sp"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPoint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/display2"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:cursorVisible="false"
        android:ems="10"
        android:fadeScrollbars="false"
        android:gravity="right"
        android:inputType="none"
        android:maxLines="1"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/display"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.897"
        tools:ignore="LabelFor" />

    <Switch
        android:id="@+id/Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:bufferType="normal"
        android:text="Light Mode"
        android:textColor="#FDFAFA"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/display2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.428" />

</androidx.constraintlayout.widget.ConstraintLayout>